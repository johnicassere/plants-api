// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id         String   @id @default(uuid())
  nome       String
  email      String   @unique
  nascimento String
  senha      String
  linkImagem String
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
  plantas    Plant[]
}

model Plant {
  id             String   @id @default(uuid())
  nomeCientifico String   @unique
  nomePopular    String
  reino          String
  divisao        String
  classe         String
  ordem          String
  familia        String
  subfamilia     String
  linkImagem     String
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
  usuarios       User[]
}
